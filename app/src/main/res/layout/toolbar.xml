<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorToolbarBG"
    android:elevation="0dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbarLogo"

                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="left"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="-20dp"

                android:src="@mipmap/medic_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/toolbarTitle"
                    android:textColor="@color/colorToolbarText"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    tools:textSize="20dp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/toolbarAuthor"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorToolbarText"
                    android:textSize="12dp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:text="@string/toolbarAph"
            android:textColor="@color/colorToolbarText"
            android:textSize="12dp"
            android:textStyle="italic"
            tools:textSize="12dp"
            />

    </LinearLayout>



    </androidx.appcompat.widget.Toolbar>

